        <div class="contenedor2">
        <!--si el array de tareas esta vacio se muestra en la vista el mensaje correspondiente-->
           <%unless @@tareas == []%>
       

       <p> Tus tareas son las siguientes</p>
        <a href="ingreso"><p>Regresar</p></a>
       
        </div>
        <div class="contenedor1">
        
        <table>

        <tr>
        <th>Nombre</th>
        <th>ID</th>
        <th>Estado</th>
        <th>Fecha de creacion</th>
        <!--Aqui se usa codigo ruby para iterar sobre el array de tareas e ir creando filas segun el nuemro de tareas-->
        </tr>
        <%@@tareas.each do |x|%>
        <tr>
        <td>
        <%=x["title"]%>
        </td>   
        <td>
        <%=x["id"]%>
        </td>   
        <td>
         <%if x["done"] == false%>
         <a href=""><img class=imagen1  src="../img/eliminar.jpeg"></a> 
        
        <%else%>
        <a href=""><img class=imagen1 src="../img/check.png"></a>
        <%end%>
       
        </td> 
        <td>
        <%=x["created_at"]%>
        </td> 
        
        </tr>

        <%end%>

       
        </table>
        <%else%>
        <p>No tienes tareas</p>
       <a href="ingreso"><p>Regresar</p></a>

        <%end%>


        </div>
        
